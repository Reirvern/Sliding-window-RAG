{
  "project_name": "SmartRAG",
  "logging": {
    "level": "INFO", // DEBUG, INFO, WARNING, ERROR
    "console": true,
    "file": true,
    "file_path": "logs/app.log",
    "rotation": "10 MB" // или "1 day"
  },
  "data": {
    "input_dir": "data/",
    "output_dir": "results/"
  },
  "chunking": {
    "strategy": "simple_text", // Пока только одна
    "simple_text": {
      "chunk_size": 512, // символов
      "chunk_overlap": 50
    }
  },
  "retrieval": {
    "strategy": "sliding_window", // Пока только ваша
    "sliding_window": {
      "window_size": 3,
      "threshold": 0.5 // Условный порог для "Да"
    }
  },
  "inference": {
    "stage1": { // Модель для "Да/Нет"
      "type": "llamacpp",
      "model_path": "models/stage1/ggml-model-Q4_K_M.gguf",
      "n_ctx": 2048,
      "n_gpu_layers": 35,
      "temperature": 0.1,
      "classify_prompt_template": "Текст: {chunk_text}\nВопрос: {question}\nЕсть ли в тексте информация по вопросу? Ответь только 'Да' или 'Нет'."
    },
    "stage2": { // Модель для финального ответа
      "type": "llamacpp",
      "model_path": "models/stage2/ggml-model-Q5_K_M.gguf",
      "n_ctx": 4096,
      "n_gpu_layers": -1,
      "temperature": 0.7,
      "answer_prompt_template": "Используй приведенные ниже релевантные фрагменты текста, чтобы ответить на вопрос. Если ответа нет в тексте, скажи 'Не знаю'.\n\nВопрос: {question}\n\nФрагменты:\n{retrieved_chunks}\n\nОтвет:"
    }
  }
}